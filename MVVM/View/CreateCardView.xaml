<UserControl x:Class="Private_Ethercloset.MVVM.View.CreateCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Private_Ethercloset.MVVM.View"
             xmlns:viewModel="clr-namespace:Private_Ethercloset.MVVM.ViewModel"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="750 " d:DesignWidth="1350">

    <UserControl.DataContext>
        <viewModel:CreateCardViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>


            <Image x:Name="ImageDisplay" Source="/Images/Placeholder.png" />

            <StackPanel Grid.Column="0"
                        Grid.Row="1">
                <Button Content="选择图片"
                        Background="#3A6D8C"
                        Foreground="White"
                        Style="{StaticResource UploadButtonTheme}"
                        Margin="32,27,32,5" 
                        Height="50"
                        Click="UploadButton_Click"/>

                <Button Content="保存到衣柜"
                        Background="#3A6D8C"
                        Foreground="White"
                        Style="{StaticResource UploadButtonTheme}"
                        Margin="32,0,32,27" 
                        Height="50"
                        Click="SaveButton_Click"/>
            </StackPanel>
            
            
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="装备详情"
                       Style="{StaticResource Catagory}"
                       Grid.Column="0"
                       Grid.Row="0"/>

            <StackPanel Grid.Column="0" Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="武器 ：" FontSize="13" Style="{StaticResource Catagory}"/>
                    <TextBox x:Name="WeaponEntry" Background="#353340" Foreground="#cfcfcf" Width="160" Margin="15,0,0,0" BorderThickness="1" BorderBrush="#FF43434A"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="染色1 ：" FontSize="13"  Style="{StaticResource Catagory}"/>
                    <ComboBox x:Name="WeaponDye1"
                              Width="160"
                              materialDesign:HintAssist.Hint="无染色"
                              materialDesign:HintAssist.FloatingHintHorizontalAlignment="Center"
                              materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                              Style="{StaticResource MaterialDesignComboBox}"
                              Background="#353340"  
                              Foreground="#cfcfcf"
                              Margin="8,0,0,0"
                              SelectedItem="无染色">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#212427"/>
                                <!-- Dropdown item color -->
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="染色2 ：" FontSize="13"  Style="{StaticResource Catagory}"/>
                    <ComboBox x:Name="WeaponDye2"
                              Width="160"
                              materialDesign:HintAssist.Hint="无染色"
                              materialDesign:HintAssist.FloatingHintHorizontalAlignment="Center"
                              materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                              Style="{StaticResource MaterialDesignComboBox}"
                              Background="#353340"  
                              Foreground="#cfcfcf"
                              Margin="8,0,0,0"
                              SelectedItem="无染色">     
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#212427"/>
                                <!-- Dropdown item color -->
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>
            </StackPanel>



